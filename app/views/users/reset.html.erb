<div id="forgot-password">
    <div id="forgot-password-top"></div>
        <div id="forgot-password-body">
            <h2>Pick a New Password for <%= @user.email %></h2>
            <% form_for :user do |form|  %>
                <%= error_messages_for :user %>
                <% if flash[:reset_password_notice] %>
                    <div id="message">
                        <%= flash[:reset_password_notice] %>
                    </div>
                <% end %>
                <div class="form-row">
                    <label for="email">Password:</label>
                    <%= form.text_field :password,
                                        :size => User::PASSWORD_SIZE,
                                        :maxlength => User::PASSWORD_MAX_LENGTH %>
                </div>
                <div class="form-row">
                    <label for="email">Confirm Password:</label>
                    <%= form.text_field :password_confirmation,
                                        :size => User::PASSWORD_SIZE,
                                        :maxlength => User::PASSWORD_MAX_LENGTH %>
                </div>
                <div class="form-row">
                    <%= submit_tag "Reset Password" %>
                </div>
            <% end %>
        </div><!-- end login-body -->
    <div id="forgot-password-bottom"></div>
</div><!-- end login -->