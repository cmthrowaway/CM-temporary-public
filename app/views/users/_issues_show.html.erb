<% IssueCategory.all.each do |issue_category| %>
  <div>
    <h3><%=issue_category.name %></h3>
    <ul>
      <% issue_category.issues.each do |issue| %>
        <li>
          <div>
            <div class="issue">
              <%=issue.name %>
            </div>
            <div class="score">
              <%=@user.issue_weight(issue) %>
            </div>
            <br>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>