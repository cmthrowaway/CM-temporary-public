<div id="forgot-password">
    <div id="forgot-password-top"></div>
        <div id="forgot-password-body">
            <h2>Password Reminder</h2>
            <% form_tag forgot_path do  %>
                <%= error_messages_for :session %>
                <% if flash[:message] %>
                    <div id="message">
                        <%= flash[:message] %>
                    </div>
                <% end %>
                <div class="form-row">
                    <label for="email">Email:</label>
                    <%= text_field_tag 'email' %>
                </div>
                <div class="form-row">
                    <%= submit_tag "Send Password", :id => "send-password-submit" %>
                </div>
            <% end %>
        </div><!-- end login-body -->
    <div id="forgot-password-bottom"></div>
</div><!-- end login -->