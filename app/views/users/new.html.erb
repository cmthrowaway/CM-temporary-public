<div id="signup">
<h2>Sign up as a new user</h2>
<% @user.password = @user.password_confirmation = nil %>
<!-- <%= error_messages_for :user %> -->
<% form_for :user, :html => {:id=>'registerForm'}, :url => users_path do |f| -%>
  <div class="form-row">
    <label>*Email:</label>
    <%= f.text_field :email, :class=>'required email' %>
  </div>
  <div class="form-row">
    <label>*Password:</label>
    <%= f.password_field :password, :class=>'required' %>
  </div>
  <div class="form-row">
    <label>*Confirm Password:</label>
    <%= f.password_field :password_confirmation, :class=>'required' %>
  </div>
  <div class="form-row accept-terms">
  <%= check_box_tag :agree_to_terms %> 
  <span>I agree to the <%= link_to 'Citizens Market Terms of Service', '/terms', :target => :new %></span>
  </div>
  <div class="form-row">
    <%= submit_tag "Sign Up", :id => "submit" %>
  </div>
<% end -%>
</div>
