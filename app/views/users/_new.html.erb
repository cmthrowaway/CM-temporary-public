<% content_for :head do %>
  <%= javascript_include_tag 'jquery-1.3.2.min.js' %>
  <%= javascript_include_tag 'jquery.validate.min.js' %>
  <%= javascript_include_tag 'application' %>
<% end %>
<div id="register">
    <div id="register-top"></div>
        <div id="register-body">
                <h2>Sign Up and Write a Review</h2>
                <% form_for :user, :html => {:id=>'register-form'}, :url => register_path do |form|  %>
                    <%= error_messages_for :user %>
                    <% unless flash[:notice].nil? %>
            		    <div id="flash_notice">
            		        <%= flash[:notice] %>
            		    </div>
            	    <% end %>
            	    <div class="form-row">
                        <label for="user_firstname">*First Name:</label>
                        <%= form.text_field :firstname,
                                            :size => User::FIRSTNAME_SIZE,
                                            :maxlength => User::FIRSTNAME_MAX_LENGTH %>
                    </div>
                    <div class="form-row">
                        <label for="user_lastname">*Last Name:</label>
                        <%= form.text_field :lastname,
                                            :size => User::LASTNAME_SIZE,
                                            :maxlength => User::LASTNAME_MAX_LENGTH %>
                    </div>
                    <div class="form-row">
                        <label for="user_lastname">*Email:</label>
                        <%= form.text_field :email,
                                            :size => User::EMAIL_SIZE,
                                            :maxlength => User::EMAIL_MAX_LENGTH %>
                    </div>
                    <div class="form-row">
                        <label for="user_password">*Password: <span class="instruction">(must be at least 6 characters long)</span></label>
                        <%= form.password_field :password,
                                            :size => User::PASSWORD_SIZE,
                                            :maxlength => User::PASSWORD_MAX_LENGTH %>
                    </div>
                    <div class="form-row">
                        <label for="user_password_confirmation">*Confirm Password:</label>
                        <%= form.password_field :password_confirmation,
                                            :size => User::PASSWORD_SIZE,
                                            :maxlength => User::PASSWORD_MAX_LENGTH %>
                    </div>
                    <div id="agree" class="form-row">
                        <span>I agree to the <%= link_to 'Citizens Market Terms of Service', '/terms' %></span>
                        <%= form.check_box :terms_of_use %> 
                    </div>
                    <div class="form-row captcha">
                        <%= render :partial => 'captcha/recaptcha' %>
                    </div>
                    <div class="form-row">
                        <%= submit_tag "Sign Up", :id => "submit" %>
                        <span id="signin">or 
                            <%=link_to "Sign In", '/login' %>
                        </span>
                    </div>
                <% end %>
        </div><!-- end register-body -->
    <div id="register-bottom"></div>
</div><!-- end register -->

