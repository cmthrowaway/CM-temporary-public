<fieldset id="company-form">
  <div id="company_logo"></div>
  <label for="company-name">Name:</label>
  <%= f.text_field :name, :size => 35 %>
  <label for="company-stock-symbol">Stock Symbol:</label>
  <%= f.text_field :stock_symbol, :size => 35 %>
  <label for="company_website_url">Website Url:</label>
  <%= f.text_field :website_url, :size => 35 %>
  <label for="company_description">Description:</label>
  <%= f.text_area :description, :cols => 110, :rows => 5 %>
</fieldset>