<div id="add-company">
  <h1>Add a Company</h1>
  <p>Only 2 fields are required</p>
  <div id="add-company-form">
    <% form_for :company, :url => {:action => "create"} do |f| %>
      <div>
        <label>*Name:</label>
        <%= f.text_field :name %>
      </div>
      <div>
        <label>*Website:</label>
        <%= f.text_field :website %>
      </div>
      <div>
        <label>City:</label>
        <%= f.text_field :city %>
      </div>
      <div>
        <label>Country:</label>
        <%= f.text_field :country %>
      </div>
      <div>
        <label>Zip Code:</label>
        <%= f.text_field :zip %>
      </div>
      <div>
        <label>Description:</label>
        <%= f.text_field :description %>
      </div>
      <div>
        <label>Industry:</label>
        <%= f.text_field :industry %>
      </div>
      <div>
        <label>Brands:</label>
        <%= f.text_field :brands %>
      </div>
      <div>
        <label>Barcode:</label>
        <%= f.text_field :barcode %>
      </div>
      <%= submit_tag "Add Company",:class => "submit" %>
    <% end %>
  </div>
</div><!-- end add-company -->
