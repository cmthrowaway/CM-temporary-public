<%= javascript_include_tag 'jquery.validate' %>
<div id="login">
    <div id="login-top"></div>
        <div id="login-body">
            <h2>Log In</h2>
            <% form_tag session_path do %>
            <% if flash[:notice] %>
              <div id="notice">
                <%= flash[:notice] %>
              </div>
            <% end %>
                <div class="form-row">
                    <label>*Email:</label>
              		  <%= text_field_tag 'email', @login %></p>
                </div>
                <div class="form-row">
                    <label>*Password:</label>
              	    <%= password_field_tag 'password', nil %></p>
                </div>
                <div class="form-row">
                    <%= submit_tag "Log In", :id => "submit" %>
                </div>
            <% end %>
        </div><!-- end login-body -->
    <div id="login-bottom"></div>
</div><!-- end login -->


